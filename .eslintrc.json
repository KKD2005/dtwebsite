{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "parser": "babel-eslint",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": { 
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }], 
        "react/sort-comp": [1, {
            "order": [
            "constructor",
            "lifecycle",
            "everything-else",
            "render"
            ]
        }],
        "no-underscore-dangle": ["error", { "allow": ["_id"] }]
    }
}